{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["ES2024"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "include": [
    "@types/**/*.d.ts",
    "eslint.config.mts",
    "scripts/**/*.ts"
  ]
}
