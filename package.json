{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p apps-script",
    "makeMathdokuSlides": "npm run build && npm run makeMathdokuSlides:fast",
    "makeMathdokuSlides:fast": "jiti scripts/makeMathdokuSlides.ts",
    "ocrMathdoku": "uv run ocr/ocr_mathdoku.py",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check": "npm run spellcheck && npm run lint && tsc -p apps-script && tsc",
    "spellcheck": "cspell . --no-progress"
  },
  "devDependencies": {
    "@eslint-community/eslint-plugin-eslint-comments": "^4",
    "@stylistic/eslint-plugin": "^4",
    "@tsconfig/strictest": "^2",
    "@types/google-apps-script": "^1.0.83",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "cspell": "^9.6.4",
    "eslint": "^9",
    "eslint-plugin-perfectionist": "^4",
    "jiti": "^2.6.1",
    "typescript": "^5.7",
    "typescript-eslint": "^8"
  },
  "dependencies": {
    "googleapis": "^171.4.0",
    "js-yaml": "^4.1.1"
  }
}
